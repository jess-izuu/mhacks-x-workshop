FROM ubuntu

WORKDIR /usr/src/app

COPY . /usr/src/app

RUN apt-get update && \
	apt-get install -y python && \
	apt-get install -y python3 && \
	apt-get install -y python3-pip

RUN pip3 install --upgrade pip && \
	pip3 install gunicorn==19.6.0 tensorflow>=1.1.0 alembic==0.9.1 Flask==0.12.1 Flask_Admin==1.5.0 Flask_BasicAuth==0.2.0 Flask_Cors==3.0.2 Flask_Migrate==2.0.3 Flask_Moment==0.5.1 Flask_PageDown==0.2.2 Flask_RESTful==0.3.5 Flask_Script==2.0.5 Flask_SQLAlchemy==2.1 Flask_WTF==0.14.2 numpy==1.11.0 SQLAlchemy==1.1.9 Werkzeug==0.12.1 WTForms==2.1 protobuf==3.3.0 PyYAML==3.12 sqlalchemy_migrate==0.11.0 psycopg2==2.6.1 whitenoise==2.0.6 requests==2.9.1 


EXPOSE 6000

CMD python3 manage.py
